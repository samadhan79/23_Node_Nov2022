{{>Header}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center;">Products</h1>
            <a href="/addproduct" class="btn btn-primary">Add</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each Products}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img src="{{this.image}}" width="50px" alt=""></td>
      
        <td>
            <a href="editproduct?eid={{this._id}}" class="btn btn-info">EDIT</a>
            <a href="deleteproduct/{{this._id}}" class="btn btn-danger">DELETE</a>
        </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
        </div>
    </div>

</div>
{{>Footer}}